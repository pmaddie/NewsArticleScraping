{{!-- when someone wants to look at an article and populate --}}
{{!-- add area for user to leave a comment --}}
<div class="row">
    <h3 class="card">{{article.this}}</h3>
    <h5 class="card-panel articleBody">{{body}}</h5>
</div>

<div class="row">
    <div class="col s2"></div>
    <form action="/comment/{{article._id}}" method="POST" class="card-panel col s8">
    <h5>Comment on this Article</h5>
    <div class="row">
        <div class="input-field">
            <i class="material-icons prefix">perm_identity</i>
            <input id="icon_prefix" type="text" placeholder="Name" name="name" class="validate active">
        </div>

        <div class="input-field">
            <i class="material-icons prefix">note</i>
            <input id="icon_prefix" type="text" placeholder="Note" name="note" class="validate active">
        </div>

    </div>
    <div class="row">
        <div class="input-field">
            <center><input class="btn add-comment-button topnav" type="submit" vale="Submit"></center>
        </div>
    </div>
    </form>
</div>
